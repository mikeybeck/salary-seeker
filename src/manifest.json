{
  "name": "Salary Seeker",
  "version": "1.0.18",
  "description": "Calculate the salary range for jobs advertised on Seek.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "18": "icons/icon18.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*.seek.com.au/*",
    "https://*.seek.co.nz/*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "manifest_version": 3,
  "content_security_policy": {
    "default-src": "none",
    "style-src": "self",
    "script-src": "self",
    "connect-src": "self https://*.seek.com.au"
  }
}
